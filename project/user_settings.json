{
    "ext": {
        "name": "URL format",
        "type": "radio",
        "options": [
            "Short URL (e.g. https://sgfc.co/filename)",
            "Full URL (e.g. https://sgfc.co/filename.png)"
        ],
        "default": 0
    },
    "block": {
        "name": "Access options",
        "type": "radio",
        "options": [
            "Allow anyone to view your gallery",
            "Require password to view your gallery"
        ],
        "default": 0
    },
    "gallery_password": {
        "name": "Viewing password",
        "type": "text",
        "default": "",
        "notes": "This is only needed if \"Require password to view your gallery\" is set.<br />This password is for logging into the gallery, and does not change your key password."
    },
    "gallery_style": {
        "name": "Beta gallery",
        "type": "radio",
        "options": [
            "Disabled",
            "Enabled"
        ],
        "default": 0
    },
    "groups": {
        "Image link settings": [
            "ext"
        ],
        "Gallery settings": [
            "block",
            "gallery_password",
            "gallery_style"
        ]
    }
}